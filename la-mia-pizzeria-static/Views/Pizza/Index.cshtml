@{

    Layout = "_Layout";
}     

@model List<Pizza>
<div class="container p-5">
    <div class="row">
        <div class="col-12">

            <h1 class="my-5 text-center ms_main_title">ECCO UNA LISTA DI TUTTE LE TUE PIZZE</h1>

            <a class="btn my_btn mb-4" href="@Url.Action("Aggiungi", "Pizza")">Inserisci una nuova Pizza</a>


            <table class="table align-middle">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Immagine</th>
                        <th scope="col">Gusto</th>
                        <th scope="col">Ingredienti</th>
                        <th scope="col">Prezzo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Pizza pizza in Model)
                    {
                        <tr>
                            <td scope="row">@pizza.Id</td>
                            <td>
                                <img src="@pizza.Immagine" />
                            </td>
                            <td>@pizza.Gusto</td>
                            <td>@pizza.Ingredienti.</td>
                            <td>@pizza.Prezzo€</td>
                        </tr>
                    }
                    
                </tbody>
            </table>

        </div>
    </div>
</div>
@model Pizza

<div class="jumbotron d-flex align-items-center">
    <div class="jt-logo d-flex align-items-center justify-content-center">
        PIZZERIA DELLA MADONNA
    </div>
</div>
<div class="details_container">
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="col-lg-4 col-sm-12">
                <div class="details_card">
                    <div class="card-img">
                        <img src="@Model.Immagine" />
                    </div>
                    <div class="card-title">@Model.Gusto</div>
                    <p>
                        <strong>Categoria:</strong>
                        @if (Model.Category != null)
                        {
                            <span>@Model.Category.Name</span>
                        }
                        else
                        {
                            <span>Nessuna categoria associata</span>
                        }
                    </p>
                    <div class="card-subtitle">@Model.Descrizione.</div>
                    <hr class="card-divider">
                    <div class="card-price text-center">
                        <span>@Model.Prezzo</span> €
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

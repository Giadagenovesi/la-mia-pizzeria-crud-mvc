@model PizzaFormModel

<div class="container">
    <div class="row">
        <div class="col-12 mt-5">
            <h1 class="mb-3">Pagina aggiornamento di una Pizza</h1>
        </div>
        <form asp-controller="Pizza" asp-action="Aggiorna" asp-route-id="@Model.Pizza.Id" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Pizza.Id" />
            <div class="mb-3">
                <strong>Gusto:</strong>
                <input type="text" class="form-control" asp-for="Pizza.Gusto">
                <span asp-validation-for="Pizza.Gusto" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Descrizione:</strong>
                <input type="text" class="form-control" asp-for="Pizza.Descrizione">
                <span asp-validation-for="Pizza.Descrizione" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Prezzo:</strong>
                <input type="number" class="form-control" asp-for="Pizza.Prezzo">
                <span asp-validation-for="Pizza.Prezzo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Categoria:</strong>
                <select asp-for="Pizza.CategoryId" rows="10" class="form-control">
                    <option value=""></option>
                    @foreach (Category category in Model.Categories)
                    {
                        @if (Model.Pizza.CategoryId == category.Id)
                        {
                            <option value="@category.Id" selected>@category.Name</option>
                        }
                        else
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <strong>URL Immagine:</strong>
                <input type="text" class="form-control" asp-for="Pizza.Immagine">
                <span asp-validation-for="Pizza.Immagine" class="text-danger"></span>
            </div>
            <button type="submit" class="btn my_btn mb-5">Aggiorna</button>
        </form>
    </div>
</div>
